    "react-dom": "^15.4.1",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-dev-server": "^2.4.1",
    "webpack-hot-middleware": "^2.17.1",
    "webpack-validator": "^2.3.0"
  },
  "dependencies": {
    "chroma-js": "^1.2.2",
    "lodash": "^4.17.4"
  },
