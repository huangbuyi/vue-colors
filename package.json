    "jest": "^19.0.2",
    "json-loader": "^0.5.4",
    "marked": "^0.3.6",
    "prismjs": "^1.6.0",
    "raw-loader": "^0.5.1",
    "react": "^15.4.1",
    "react-addons-perf": "^15.4.1",
