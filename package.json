{
  "name": "react-colors",
  "version": "0.1.2",
  "title": "React colors",
  "description": "A customizable color picker",
  "homepage": "https://huangbuyi.github.io/react-colors/",
  "main": "lib/index.js",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "test": "jest",
    "coverage": "jest && codecov",
